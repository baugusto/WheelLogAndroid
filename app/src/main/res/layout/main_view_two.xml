<LinearLayout android:id="@+id/page_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <android.support.v7.widget.GridLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            android:animateLayoutChanges="true"
            app:orientation="horizontal">

            <TextView
                android:id="@+id/tvWaitText"
                android:text="@string/waiting_for_wheel"
                android:textSize="32sp"
                app:layout_gravity="center_horizontal|center_vertical"
                app:layout_columnSpan="2"/>

            <TextView
                android:id="@+id/tvTitleSpeed"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/speed"/>

            <TextView
                android:id="@+id/tvSpeed"
                android:visibility="gone"
                style="@style/Stats" />

            <TextView
                android:id="@+id/tvTitleTopSpeed"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/top_speed"/>

            <TextView
                android:id="@+id/tvTopSpeed"
                android:visibility="gone"
                style="@style/Stats" />
				
			<TextView
                android:id="@+id/tvTitleAverageSpeed"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/average_speed"/>

            <TextView
                android:id="@+id/tvAverageSpeed"
                android:visibility="gone"
                style="@style/Stats" />
				
			<TextView
                android:id="@+id/tvTitleAverageRidingSpeed"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/average_riding_speed"/>

            <TextView
                android:id="@+id/tvAverageRidingSpeed"
                android:visibility="gone"
                style="@style/Stats" />

            <TextView
                android:id="@+id/tvTitleBattery"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/battery"/>

            <TextView
                android:id="@+id/tvBattery"
                android:visibility="gone"
                style="@style/Stats" />

            <TextView
                android:id="@+id/tvTitleTemperature"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/temperature"/>

            <TextView
                android:id="@+id/tvTemperature"
                android:visibility="gone"
                style="@style/Stats" />
				
			<TextView
                android:id="@+id/tvTitleTemperature2"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/temperature2"/>

            <TextView
                android:id="@+id/tvTemperature2"
                android:visibility="gone"
                style="@style/Stats" />

			<TextView
                android:id="@+id/tvTitleAngle"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/angle"/>


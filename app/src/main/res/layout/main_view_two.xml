			<TextView
                android:id="@+id/tvTitleRoll"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/roll"/>

            <TextView
                android:id="@+id/tvRoll"
                android:visibility="gone"
                style="@style/Stats" />
				
            <TextView
                android:id="@+id/tvTitleRideTime"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/ride_time"/>

            <TextView
                android:id="@+id/tvRideTime"
                android:visibility="gone"
                style="@style/Stats" />
				
			<TextView
                android:id="@+id/tvTitleRidingTime"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/riding_time"/>

            <TextView
                android:id="@+id/tvRidingTime"
                android:visibility="gone"
                style="@style/Stats" />

            <TextView
                android:id="@+id/tvTitleDistance"
                android:visibility="gone"
                style="@style/Stats.Title"

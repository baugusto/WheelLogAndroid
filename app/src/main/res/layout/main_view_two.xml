            <TextView
                android:id="@+id/tvMode"
                android:visibility="gone"
                style="@style/Stats" />

            <TextView
                android:id="@+id/tvTitleName"
                android:visibility="gone"
                style="@style/Stats.Title"
                android:text="@string/name"/>

            <TextView
                android:id="@+id/tvName"
